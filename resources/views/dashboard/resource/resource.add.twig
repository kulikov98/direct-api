{% extends 'templates/app.twig' %}

{% block content %}
<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card">
      <div class="card-header">Добавление ресурса</div>
      <div class="card-body">
        <form action="{{ path_for('dashboard.add.resource') }}" method="post">
          <div class="form-group">
            <label for="name">Название</label>
            <input type="text" name="name" id="name" placeholder=""
              class="form-control {{ errors.name ? 'is-invalid' : '' }}">
            {% if errors.name %}
            <span class="invalid-feedback">{{ errors.name | first }}</span>
            {% endif %}
          </div>
          <div class="form-group">
            <button class="btn btn-outline-primary">Добавить</button>
          </div>
          {{ csrf.field | raw }}
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}