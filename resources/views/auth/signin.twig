{% extends 'templates/app.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">Sign In</div>
                <div class="card-body">
                    <form action="{{ path_for('auth.signin') }}" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email" placeholder="you@email.com" value="{{ old.email }}" class="form-control {{ errors.email ? 'is-invalid' : '' }}">
                                {% if errors.email %}
                                    <span class="invalid-feedback">
                                        {{ errors.email | first }}</span>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input class="form-control {{ errors.password ? 'is-invalid' : '' }}" id="password" name="password" type="password">
                                    {% if errors.password %}
                                        <span class="invalid-feedback">
                                            {{ errors.password | first }}</span>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-outline-primary">Sign In</button>
                                </div>
                                {{ csrf.field | raw }}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
    